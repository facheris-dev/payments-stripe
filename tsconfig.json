{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ESNext",

        /* */
        "noUncheckedIndexedAccess": true,
        "strict": true,

        /**/
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,

        /**/
        "lib": [
            "ESNext"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}